# Production Environment Configuration
# Copy this to prod.tfvars and fill in your credentials

environment      = "prod"
proxmox_endpoint = "https://YOUR_PROXMOX_IP:8006"
proxmox_username = "root@pam"
proxmox_password = "YOUR_PASSWORD_HERE"
node_name        = "pve"
storage          = "local-lvm"

# Prod uses dual bridges with proper network segmentation
bridge_main = "vmbr0"
bridge_iot  = "vmbr1"
